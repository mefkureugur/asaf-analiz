    "noUnusedParameters": false,  /* ğŸ‘ˆ KullanÄ±lmayan parametreler hata vermeyecek */
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "allowJs": true,              /* JS dosyalarÄ±nÄ± da projenin iÃ§ine alabilirsin */
    "esModuleInterop": true,      /* KÃ¼tÃ¼phane uyumluluÄŸunu artÄ±rÄ±r */
